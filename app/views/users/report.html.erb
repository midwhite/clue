<div class="reported-user">
    <% if @user.avatar? %>
        <%= link_to image_tag(@user.avatar(:thumb)), supporter_path(@user.id) %>
    <% else %>
        <%= link_to image_tag('top/clue.png'), supporter_path(@user.id) %>
    <% end %>
    <p><%= link_to @user.username, user_path(@user.id), style: 'display: inline' %>さんを通報します。</p>
</div>
<%= form_for(@reported_account, url: reported_users_path) do |f| %>
<div class="report-reason">
    <%= f.label :reason, '通報の理由を教えてください。' %><br />
    <%= f.text_area :reason, size: '80x10', autofocus: true %>
</div>
    <%= f.hidden_field :user_id, value: @user.id %>
    <%= f.submit('通報する') %>
<% end %>