<div class="user-confirm-account">
    <h1>振込口座確認</h1>
    <table class="table table-bordered">
            <tr>
                <th>金融機関コード</th>
                <td><%= @store.bank_id %></td>
            </tr>
            <tr>
                <th>金融機関名</th>
                <td><%= @store.bank_name %>銀行</td>
            </tr>
            <tr>
                <th>支店コード</th>
                <td><%= @store.store_id %></td>
            </tr>
            <tr>
                <th>支店名</th>
                <td><%= @store.store_name %>支店</td>
            </tr>
            <tr>
                <th>口座番号</th>
                <td><%= params[:account_id] %></td>
            </tr>
            <tr>
                <th>名義</th>
                <td><%= params[:user_name] %></td>
            </tr>
    </table>
    <%= button_to '登録', accounts_path(q: @store.id, account_id: params[:account][:account_id], user_name: params[:account][:user_name]) %>
    <%= link_to '戻る', account_users_path(q: @store.id, account_id: params[:account][:account_id], user_name: params[:account][:user_name]) %>
</div>
