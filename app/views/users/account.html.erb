<div class="user-account">
    <% if @notice.present? %>
        <p style="color: red; font-weight: bold;"><%= @notice %></p>
    <% end %>

    <h1>振込口座登録</h1>
    <div class="kana-field">
        <%= render 'users/forms/kana_field' %>
    </div>
    <div class="clear"></div>
    <p><%= button_to 'やり直し', reset_account_users_path, remote: true, method: :get %></p>

    <%= form_for(@account, url: confirm_account_users_path, html: { method: :post }) do |f| %>
    <table class="table table-bordered">
        <tr>
            <th>金融機関コード</th>
            <td id="display-bank-id"><%= @bank_id %></td>
        </tr>
        <tr>
            <th>金融機関名</th>
            <td id="display-bank-name"><%= @bank_name %></td>
        </tr>
        <tr>
            <th>支店コード</th>
            <td id="display-store-id"><%= @store_id %></td>
        </tr>
        <tr>
            <th>支店名</th>
            <td id="display-store-name"><%= @store_name %></td>
        </tr>
        <tr>
            <th>口座番号</th>
            <td id="display-account-id">
                <%= f.text_field :account_id %>
            </td>
        </tr>
        <tr>
            <th>名義</th>
            <td id="display-user-name">
                <%= f.text_field :user_name %>
            </td>
        </tr>
    </table>
    <%= hidden_field_tag :q, @id %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit('確認') %>
    <% end %>
</div>
