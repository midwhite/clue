<div class="content600">
<h1>メッセージを送る</h1>

<% if @message.errors.any? %>
  <h2><%= @message.errors.count %>件のエラーがあります</h2>
  <ul>
    <% @message.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
 <div class="space">
   <% if @receiver.user_type == 3 %>
    <%= link_to supporter_path(@receiver.id) do %>
        宛先：<%= @receiver.username %>
    <% end %>
   <% else %>
    <%= link_to student_path(@receiver.id) do %>
        宛先：<%= @receiver.username %>
    <% end %>
   <% end %>
</div>
<%= form_for @message do |f| %>
<div class="space">
  <%= f.label :title, '件名' %>
  <%= f.text_field :title %>
  </div>
  <div class="space">
  <%= f.label :title, '本文' %>
  <%= f.text_area :message, rows: 15, cols: 60 %><br />
  <%= f.hidden_field :sender_id, value: current_user.id %><br />
  <%= f.hidden_field :receiver_id, value: params[:receiver_id] %>
  <%= f.hidden_field :sent, value: 1 %>
  <%= f.submit '送信' %>
<% end %>
</div>
</div>
<% if @messages.present? %>
  <% @messages.each do |msg| %>
    <div class="past-message">
      <% msg_sender = User.find_by(id: msg.sender_id) %>
      <% msg_receiver = User.find_by(id: msg.receiver_id) %>
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-2">
            <% if msg_sender.present? && msg_sender.avatar? %>
              <%= image_tag(msg_sender.avatar(:thumb), class: "img-responsive") %>
            <% else %>
              <%= image_tag('top/clue.png', class: "img-responsive") %>
            <% end %>
          </div>
          <div class="col-md-10">
            <% if msg_sender.present? && msg_receiver.present? %>
              <p>From <%= msg_sender.username %> To <%= msg_receiver.username %></p>
            <% end %>
            <p>
            <% if msg_sender != current_user %>
              受信
            <% else %>
              送信
            <% end %>
            日時： <%= msg.created_at.strftime("%Y年%m月%d日 %H時%M分") %></p>
            <p><%= simple_format(msg.message) %></p>
          </div>
        </div>
      </div>
     </div>
  <% end %>
<% end %>