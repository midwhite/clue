<div class="nav">
    <%= link_to 'TOP', root_path %> > <%= link_to '生徒を探す', students_path %>
</div>

<div class="students-index">
  <h1>生徒を探す</h1>
  <%= form_tag search_students_path, class:"form-inline", method: :get do %>
  <div class="form-group">
    <div class="col-xs-2">
      <input type="text" class="form-control" name="keyword" placeholder="プロフィール">
    </div>
  </div>
  <div class="form-group">
    <%= select_tag :area, options_for_select(@area), include_blank: true, class:"form-control" %>
  </div>
  <br />
  <div class="form-group">
    <div class="col-xs-1">
      <%= select_tag :sex, options_for_select(["男", "女", "他"]), include_blank: true, class:"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="input-group">
      <%= number_field_tag :min_age, nil, class:"form-control", within: 1...100 %>
    	<span class="input-group-addon" id="basic-addon2">歳</span>
    </div>
  </div>
    〜
  <div class="form-group">
    <div class="input-group">
      <%= number_field_tag :max_age, nil, class:"form-control", within: 1...100 %>
    	<span class="input-group-addon" id="basic-addon2">歳</span>
    </div>
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-primary">検索</button>
  </div>
  <% end %>
  <% if @param_keyword.present? || @param_min_age.present? || @param_max_age.present? || @param_area.present? || @param_sex.present? %>
    <h2>検索条件</h2>
    <%= @param_area %> <%= @param_min_age %> <%= @param_max_age %> <%= @param_sex %> <%= @param_keyword %>
  <% end %>
</div>

<div class="students-index-profiles">
  <% @students.each do |st| %>
  <div class="students-index-profile">
    <div class="students-index-image">
      <% if st.avatar.present? %>
      <%= link_to image_tag(st.avatar(:thumb)), student_path(st.id) %>
      <% else %>
      <%= link_to image_tag('top/clue.png', class: "no-image"), student_path(st.id) %>
      <% end %>
      <p class="area"><%= st.area %></p>
    </div>
    <div class="students-index-data">
      <p><%= link_to st.username, student_path(st.id) %></p>
      <p><%= st.grade %></p>
      <p><%= link_to 'ダイアリー', search_diaries_path(user_id: st.id), method: :post %></p>
    </div>
  </div>
  <% end %>
<div class="clear"></div>
</div>
