<div class="nav">
    <%= link_to 'TOP', root_path %> > <%= link_to 'ダイアリーを読む', diaries_path %> > <%= link_to @diary.title , diary_path %> > 編集
</div>
<div class="diary-new">
    <h1>ダイアリーを編集する</h1>
    <%= form_for @diary do |f| %>
        <%= f.label :category, 'カテゴリ' %>
        <%= f.select :category, @categories %><br />

        <%= f.label :title, 'タイトル' %><br />
        <%= f.text_field :title, size: 80 %><br />

        <%= f.label :content, '本文' %><br />
        <%= f.text_area :content, size: "78x20" %><br />

        <%= f.hidden_field :user_id, value: current_user.id %><br />

        <%= f.submit('編集') %>
    <% end %>
</div>