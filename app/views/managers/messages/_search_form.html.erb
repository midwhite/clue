<%= search_form_for(@q, url: search_managers_messages_path, html: { method: :get, class: 'form-horizontal', role: 'form' }, remote: true) do |f| %>

  <div class="form-group">
    <div class="form-inline">
      <%= f.label :title_cont, "タイトル", class:"control-label" %>
      <div class="input-group col-xs-4">
        <%= f.search_field :title_cont, class: 'form-control', placeholder:"" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit "検索" %>
  </div>

<% end %>
