<%= search_form_for(@q, url: search_managers_events_path, html: { method: :get, class: 'form-horizontal', role: 'form' }) do |f| %>

  <div class="form-group">
    <div class="form-inline">
      <%= f.label :price_gteq, "参加費（下限）", class:"control-label" %>
      <div class="input-group col-xs-4">
        <%= f.search_field :price_gteq, class: 'form-control', placeholder:"金額" %>
      	<span class="input-group-addon" id="basic-addon2">円</span>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="form-inline">
      <%= f.label :price_lteq, "参加費（上限）", class:"control-label" %>
      <div class="input-group col-xs-4">
        <%= f.search_field :price_lteq, class: 'form-control', placeholder:"金額" %>
      	<span class="input-group-addon" id="basic-addon2">円</span>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="form-inline">
      <%= f.label :title_or_content_cont, "タイトル or 内容", class:"control-label" %>
      <div class="input-group col-xs-4">
        <%= f.search_field :title_or_content_cont, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.submit "検索" %>
  </div>

<% end %>
